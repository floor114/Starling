<% provide(:title, @user.name) %>
<div class="container clearfix">
  <div class="content">
    <div class="user_info">
      <div class="avatar">
        <%= image_tag @user.avatar.url %>
      </div>
      <div class="info">
        <h1><%= @user.name %></h1>
        <!--<h3>@floor114</h3>-->
        <!--<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>-->
        <div class="more_info">
          <!--<p>Khmelnytsky</p>-->
          <!--<a href="vk.com/floor114">vk.com/floor114</a>-->
          <p>In Starling from <%= @user.created_at.strftime("%B")%>
            <%=@user.created_at.year %></p>
        </div>
      </div>
    </div>
    <div class="wall">
      <div class="artcl">
        <h1>Posts</h1>
      </div>

      <% @user.posts.reverse.each do |post| %>
          <hr>
          <div class="starls">
            <div class="starls_photo">
              <%= image_tag @user.avatar.url %>
            </div>
            <div class="starl-state">
              <div class="user_name_time">
                <p><strong><%= link_to @user.name, user_path(@user) %></strong> - <%= link_to (time_ago_in_words(post.created_at)+ " ago."), post%> </p>
                <div class="delette-post">
                <% if user_signed_in?%>
                      <% if @user.id == current_user.id %>
                          <%= link_to 'X', post, method: :delete %>
                      <% end %>

                    <% unless current_user.likes?(post) %>
                      <%= link_to 'Like', like_path(post) %>
                    <% else %>
                      <%= link_to 'Dislike', unlike_path(post) %>
                    <% end %>
                <% end %>
                  <p><%= post.likers_count %></p>
                </div>
              </div>
              <p><%= post.content %></p>
            </div>
            <div class="comments-count">
              <% if post.comments.size>0 %>
                  <%= link_to post.comments.size.to_s+' comments', post %>
              <% end %>

            </div>
          </div>
      <% end %>



    </div>
  </div>
</div>

