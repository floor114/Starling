<% provide(:title, 'Sign up') %>
<div class="container clearfix">
  <form id="form" method="POST">
    <section class="login">
      <strong>Join Starling today.</strong>
      <hr>
      <fieldset>
        <input type="text"  name="user[name]" autocomplete="off" placeholder="Full name">
        <input type="text"  name="session[username_or_email]" autocomplete="on" placeholder="Email or username">
        <input type="text"  name="session[password]" autocomplete="on" placeholder="Password">
      </fieldset>
      <button type="submit">Sign up</button>
    </section>
  </form>
</div>